// Sound utility function for diagnostic alerts
export function playSeveritySound(severity) {
  let soundFile = '';
  if (severity === 'HIGH') soundFile = '/sounds/high-alert.mp3';
  else if (severity === 'MED') soundFile = '/sounds/med-alert.mp3';
  else if (severity === 'LOW') soundFile = '/sounds/low-alert.mp3';

  if (soundFile) {
    const audio = new Audio(soundFile);
    audio.play().catch(() => {
      // Prevent errors if autoplay is blocked
      console.log('Sound alert blocked by browser policy');
    });
  }
}
